@model InvoiceProjectMVCCore.Models.Tbluser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/loginpage.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                <table>
                    <tr>
                        <td>User Id</td>
                        <td>@Html.TextBoxFor(e=>e.UniqueCode)</td>
                    </tr>
                    <tr>
                        <td>User Password</td>
                        <td>@Html.TextBoxFor(e=>e.Password)</td>
                    </tr>
                    <tr>

                        <td><input class="btn btn-primary" type="submit" value="Login" /></td>
                    </tr>
                </table>
            }

        </div>
        <div class="col-md-4"> </div>
    </div>
</body>
</html>
